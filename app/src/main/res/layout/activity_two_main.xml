<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/title"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                >


                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello World!" />

                <Button
                    android:id="@+id/bt_1"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/tv_1"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bt_1"
                    android:text="ImageView"
                    android:textAllCaps="false"
                    />

                <Button
                    android:id="@+id/bt_2"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignBaseline="@+id/bt_7"
                    android:layout_alignBottom="@+id/bt_7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/bt_1"
                    android:text="GridView"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/bt_3"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/bt_2"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bt_1"
                    android:text="列表:LinearRecycleView"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/bt_4"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/bt_3"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bt_1"
                    android:text="水平滚动:LinearRecycleView"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/bt_5"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/bt_4"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bt_1"
                    android:text="GridRecycleView"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/bt_6"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/tv_1"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bt_1"
                    android:text="PuBuRecycleView"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/bt_7"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/bt_6"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bt_1"
                    android:text="WebView"
                    android:textAllCaps="false" />
                <Button
                    android:id="@+id/bt_10"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/bt_7"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bt_1"
                    android:text="RadioButton"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/bt_8"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/bt_10"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bt_1"
                    android:text="新闻客户端"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/bt_9"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/bt_8"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bt_1"
                    android:text="聊天界面"
                    android:textAllCaps="false" />

            </RelativeLayout>
        </HorizontalScrollView>
    </ScrollView>
</LinearLayout>